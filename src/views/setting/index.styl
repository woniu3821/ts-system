@import '~stylus/variable'

.permissions
    display flex
    .permissions-box
        width 364px
        >>>.ivu-card-head
            background $primary-color
            border-radius 4px 4px 0 0
            .title
                display flex
                align-items center
                label
                    color #fff
                    margin-left 8px
                    font-size 16px
                span
                    font-size 12px
                    color #DAE6FC
                    font-weight 400
                    padding-left 5px
        .permissions-content
            .select-all
                border-bottom 1px solid $border-base-color
                padding-bottom 16px
            .check-content
                padding-top 16px
.handelBtn
    color $primary-color